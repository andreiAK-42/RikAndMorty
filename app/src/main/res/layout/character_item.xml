<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:cardCornerRadius="8dp"
        android:layout_margin="5dp"
        app:cardBackgroundColor="#202329"
        android:elevation="10dp">

        <ImageView
            android:id="@+id/imgCharacterIcon"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="@color/white"/>

        <TextView
            android:id="@+id/tvCharacterName"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="190dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="top"
            android:text="Условно Рик"
            android:textStyle="bold"
            android:shadowColor="@color/black"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="10"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tvCharacterType"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="190dp"
            android:layout_marginTop="25dp"
            android:layout_gravity="top"
            android:text="Человек"
            android:textStyle="normal"
            android:shadowColor="@color/black"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="10"
            android:textColor="@color/white" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="120dp"
            android:layout_marginStart="190dp"
            android:layout_gravity="bottom"
            android:text="Последняя локация:"
            android:textStyle="bold"
            android:shadowColor="@color/black"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="10"
            android:textColor="#d3caca" />

        <TextView
            android:id="@+id/tvCharacterLastLocation"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="80dp"
            android:layout_marginStart="190dp"
            android:layout_gravity="bottom"
            android:text="Какая-то локация"
            android:textStyle="normal"
            android:shadowColor="@color/black"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="10"
            android:textColor="@color/white" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="50dp"
            android:layout_marginStart="190dp"
            android:layout_gravity="bottom"
            android:text="Впервые встречен в:"
            android:textStyle="bold"
            android:shadowColor="@color/black"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="10"
            android:textColor="#d3caca" />

        <TextView
            android:id="@+id/tvCharacterFirstSeen"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="190dp"
            android:layout_gravity="bottom"
            android:text="Какая-то локация"
            android:textStyle="normal"
            android:shadowColor="@color/black"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="10"
            android:textColor="@color/white" />

    </androidx.cardview.widget.CardView>
</LinearLayout>